@using ChocolateFanClub.Data.Enum
@model Chocolate

<h1>Are you sure you want to delete this chocolate entry?</h1>
<img src="@Model.ChocolateImageUrl" alt="chocolate"/>
<hr/>
<form method="post" asp-action="Delete" enctype="multipart/form-data">
    <div class="mb-3">
        <input type="hidden" id="TastyId" name="TastyId" asp-for="TastyId" />
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" aria-describedby="emailHelp" disabled placeholder="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <input asp-for="Description" class="form-control" aria-describedby="emailHelp" disabled placeholder="Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Rating" class="form-label">Rating</label>
        <select asp-for="Rating" asp-items="@Html.GetEnumSelectList<Rating>()" disabled class="form-control form-control-lg">
            <option>--Select--</option>
        </select>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label">Price</label>
        <input asp-for="Price" class="form-control" aria-describedby="emailHelp" disabled placeholder="Street">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Company" class="form-label">City</label>
        <input asp-for="Company" class="form-control" aria-describedby="emailHelp" disabled placeholder="Company">
        <span asp-validation-for="Company" class="text-danger"></span>
    </div>
</form>
<div class="form-group">
    <form action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirm" class="btn btn-danger float-right mt-3" />
    </form>
</div>